{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "dist",
        "jsx": "react",
        "sourceMap": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "alwaysStrict": true,
//        "strictNullChecks":true,
        "lib": [
            "dom",
            "es2015.Promise",
            "es2015.Symbol",
            "es5"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "deprecated"
    ]
}
